# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle # mute sound

# Media player key bindings (you need playerctl for this to work.)
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioStop exec playerctl stop
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindsym $mod+Escape exec i3lock-fancy
bindsym $mod+e exec st -e ranger
bindsym $mod+p exec redshift -P -O 4500
bindsym $mod+Shift+p exec redshift -P -O 5800
bindsym $mod+m exec emacs

exec spotify
exec surf
exec xset -dpms s off
exec --no-startup-id feh --bg-fill ~/.background-image.jpg
exec compton -f
exec_always --no-startup-id numlockx on
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Modification pour i3 GAPS
for_window [class="^.*"] border pixel 2

# RDesktop Full Screen
for_window [class="^rdesktop"] move workspace number 5; floating disable

gaps inner 10

smart_gaps on
# FIN - i3 GAPS
